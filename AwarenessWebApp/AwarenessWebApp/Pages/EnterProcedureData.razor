@layout MainLayout
@page "/enterProcedureData"

<div class="container">
    <div class="row">
        <div class="col-lg-5 my-auto">
            <div class="procedureSteps">
                <ProcedureSteps />
            </div>
        </div>
        <div class="col-lg-7 my-auto">
            <div class="btn-group d-flex justify-content-start">
                <button type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Seleccione el Procedimiento
                </button>
                <div class="dropdown-menu dropdown-menu-right">
                    <button class="dropdown-item" type="button">1</button>
                    <button class="dropdown-item" type="button">2 action</button>
                    <button class="dropdown-item" type="button">3 else here</button>
                </div>
            </div>
            <br />
            <div class="form-group">
                <label class="d-flex justify-content-start" for="inputUser">Nombre Paciente</label>
                <input type="text" class="form-control" id="inputNamePatient" aria-describedby="emailHelp" placeholder="Ingresa el nombre del paciente">
            </div>
            <div class="row">
                <div class="col-lg-7">
                    <div class="form-group">
                        <label class="d-flex justify-content-start" for="inputUser">Edad Paciente</label>
                        <input type="text" class="form-control" id="inputAgePatient" aria-describedby="emailHelp" placeholder="Ingresa la edad del paciente">
                    </div>
                </div>
                <div class="col-lg-5">
                    <label class="d-flex justify-content-start" for="inputUser">ASA</label>
                    <div class="btn-group d-flex justify-content-start">
                        <button type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Seleccione el ASA
                        </button>
                        <div class="dropdown-menu dropdown-menu-right">
                            <button class="dropdown-item" type="button">1</button>
                            <button class="dropdown-item" type="button">2 action</button>
                            <button class="dropdown-item" type="button">3 else here</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="d-flex justify-content-start" for="inputUser">Estado del Paciente</label>
                <input type="text" class="form-control" id="inputNamePatient" aria-describedby="emailHelp" placeholder="Ingresa el estado del paciente">
            </div>

            <div class="btn-group d-flex justify-content-start">
                <button type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Tipo Anestesia
                </button>
                <div class="dropdown-menu dropdown-menu-right">
                    <button class="dropdown-item" type="button">1</button>
                    <button class="dropdown-item" type="button">2 action</button>
                    <button class="dropdown-item" type="button">3 else here</button>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-lg-4">
                    <div class="form-group">
                        <label class="d-flex justify-content-start" for="inputUser">Fecha</label>
                        <input type="text" class="form-control" id="inputAgePatient" aria-describedby="emailHelp" placeholder="dd/mm/aaaa">
                    </div>
                </div>
                <div class="col-lg-8">
                    <label class="d-flex justify-content-start" for="inputUser">Sala</label>
                    <div class="btn-group d-flex justify-content-start">
                        <button type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Seleccione la sala
                        </button>
                        <div class="dropdown-menu dropdown-menu-right">
                            <button class="dropdown-item" type="button">1</button>
                            <button class="dropdown-item" type="button">2 action</button>
                            <button class="dropdown-item" type="button">3 else here</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="btn-group d-flex justify-content-start">
                <button type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                   Profesor
                </button>
                <div class="dropdown-menu dropdown-menu-right">
                    <button class="dropdown-item" type="button">1</button>
                    <button class="dropdown-item" type="button">2 action</button>
                    <button class="dropdown-item" type="button">3 else here</button>
                </div>
            </div>
        </div>
</div>
</div>




